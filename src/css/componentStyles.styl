/*
LINKS
*/

a {
  text-decoration: none !important;
}

/*
POPUP MENUS
*/
.shadow {
  box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2); border-radius: 5px;
}

.dropdown {
  display: inline-block;
  z-index: 1500;
}

.dropdown-content {
  position: absolute;
  z-index: 1600;
  overflow-y: auto
  cursor: pointer;
  padding: 4px;
}

.menu-item-padding {
  padding: 6px 0px;   
}

.menu-item-content-padding {
  padding-left: 10px;
  padding-right: 10px;
}

.menu-item-padding:hover {
  background-color: #EEEEEE;
}

