/*
  INPUT CONTAINER
*/

.main-input-container {
  position:relative;
}

.main-input-container.rounded {
  margin-right: 5px;
}

.input-container.outline {
  border-color: gray;
  border-style: solid;
  border-width: 1px;
  border-radius: 5px;
}

