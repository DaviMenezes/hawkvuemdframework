.input-container.outline.filled.rounded > .input-field-container,
.input-container.outline.rounded > .input-field-container {
  margin-left: 6px;
  margin-right: 6px;
}

.input-container.outline > .input-field-container,
.input-container.outline.rounded > .input-field-container,
.input-container.filled > .input-field-container {
  margin-left: 6px;
  margin-right: 6px;
}

/*
  INPUT FIELD
*/
.input-field {
  width:100%;
  border-style:none;
  outline: none;
  z-index:0;
  background:none;
  font-size: 12px;
}

/*
  MODAL
*/
.drawer {
  height: 100%;
  width: 100%;
  position: fixed;
  z-index: 1600;
  top: 0;
  right: 0;
}

.drawer-animation {
  transition: 0.3s;
}

.drawer_container {
  z-index: 1610;
  overflow-x: hidden;
  overflow-y: auto;
}

.bg-modal
  background-color rgba(0, 0, 0, 0.20)

/*
  BUTTONS
*/

.btn {
  padding: 8px;
  font-size: 16px;
  outline: none;
  white-space: nowrap;
  cursor: pointer;
}

.btngroup {
  font-size: 16px;
  outline: none;
  white-space: nowrap;
  cursor: pointer;
}

.flatbtn:hover {
  border-radius: 5px;  
}

.btnfab {
  padding: 8px;
  font-size: 16px;
  outline: none;
  white-space: nowrap;
  display: inline-flex;
  cursor: pointer;
  border-radius: 50%;
}

.btn.rounded {
  border-radius: 50px;
}

.btn.outlinedbtn, .btngroup.outlinedbtn {
  border: 1px solid lightgray;
  border-radius: 5px;
}

.btn.outlinedbtn.rounded {
  border: 1px solid lightgray;
  border-radius: 50px;
}

.btn.containedbtn.disabled {
  color: gray;
  background-color: lightgray;
}

.btn.outlinedbtn.disabled {
  color: gray;
}

/*
END BUTTONS
*/

.circle {
  border-radius: 50%;
}


.chip {
  border-radius: 50px;
}

.boxshadow {
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
}

.bottom_shadow
  box-shadow: 0px 2px rgba(0,0,0,0.2);

.tab {
  display:inline-block;
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
}

.title {
  color: black;
}

.title-media {
  color: white;
}

.subtitle {
  color: gray;
  font-size: 14px;
}

.subtitle-media {
